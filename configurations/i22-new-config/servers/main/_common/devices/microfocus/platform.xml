<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:aop="http://www.springframework.org/schema/aop" xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba" xmlns:tx="http://www.springframework.org/schema/tx" xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd                         http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd                                 http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd                                         http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd                                                 http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">
    <bean class="gda.device.scannable.ScannableMotor" id="mfplatform_x">
        <property name="motor" ref="mfplatform_x_motor"/>
        <property name="local" value="true"/>
    </bean>
    <bean class="gda.device.scannable.ScannableMotor" id="mfplatform_y1">
        <property name="motor" ref="mfplatform_y1_motor"/>
        <property name="local" value="true"/>
    </bean>
    <bean class="gda.device.scannable.ScannableMotor" id="mfplatform_y">
        <property name="motor" ref="mfplatform_y_motor"/>
        <property name="local" value="true"/>
    </bean>
    <bean class="gda.device.scannable.ScannableMotor" id="mfplatform_yaw">
        <property name="motor" ref="mfplatform_yaw_motor"/>
        <property name="local" value="true"/>
    </bean>
    <bean class="gda.device.scannable.ScannableMotor" id="mfplatform_y2">
        <property name="motor" ref="mfplatform_y2_motor"/>
        <property name="local" value="true"/>
    </bean>
    <bean class="gda.device.scannable.ScannableMotor" id="mfplatform_pitch">
        <property name="motor" ref="mfplatform_pitch_motor"/>
        <property name="local" value="true"/>
    </bean>
    <bean class="gda.device.scannable.scannablegroup.ScannableGroup" id="mfplatform">
        <property name="local" value="true"/>
        <property name="groupMembers">
            <list>
                <ref bean="mfplatform_x"/>
                <ref bean="mfplatform_y"/>
                <ref bean="mfplatform_y1"/>
                <ref bean="mfplatform_y2"/>
                <ref bean="mfplatform_yaw"/>
                <ref bean="mfplatform_pitch"/>
            </list>
        </property>
    </bean>
</beans>
