<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="DAServer" class="gda.device.detector.DummyDAServer">
		<property name="local" value="true"/>
		<property name="host" value="bm26a-exafs-vme"/>
		<property name="port" value="1972"/>
		<property name="startupCommands">
			<list>
				<value>close-all</value>
        		<value>tfg config '/tfg0'</value>
        		<value>scaler config 32 1</value>
        		<value>xspress config 'xsp1' '/dev/dsp0,1,2,3,4' 9</value>
			</list>
		</property>
		<property name="dataPort" value="20030"/>
		<property name="replyTimeOut" value="30000"/>
		<property name="dataFile" value="Mofoil2.dat" />
		<property name="nonRandomTestData" value="true"/>
	</bean>

	<!-- Time Frame Generator -->
	<bean id="tfg" class="gda.device.timer.Etfg">
		<property name="daServer" ref="DAServer" />
	</bean>

	<bean id="xmapcontroller" class="gda.device.detector.xmap.DummyXmapController">
		<property name="numberOfMca" value="4" />
		<property name="numberOfBins" value="1024" />
		<property name="numberOfROIs" value="10" />
		<property name="local" value="true" />
	</bean>

	<bean id="xspress1system" class="gda.device.detector.xspress.Xspress1System">
		<property name="configureAtStartup" value="false" />
 		<property name="daServer" ref="DAServer" />
 		<property name="timer" ref="tfg" />
		<property name="xspressSystemName" value="xsp1" />
		<property name="mcaOpenCommand" value="xspress open-mca 'xsp1'" />
		<property name="scalerOpenCommand" value="xspress open-scalers 'xsp1'" />
		<property name="onlyDisplayFF" value="true" />
 		<property name="configFileName"
 			value="${gda.config}/templates/Xspress_Parameters.xml" /> 		
		<property name="dtcConfigFileName"
			value="${gda.config}/templates/Xspress_DeadTime_Parameters.xml" />
	</bean>

	<!-- Scaler channels -->
	<bean id="CalMemory" class="gda.device.memory.Scaler">
		<property name="daServer" ref="DAServer" />
		<property name="width" value="5" />
		<property name="height" value="1" />
		<property name="openCommand" value="scaler open transposed" />
	</bean>

	<bean id="Stanford01" class="gda.device.currentamplifier.DummyCurrentAmplifier"/>
	<bean id="Stanford02" class="gda.device.currentamplifier.DummyCurrentAmplifier"/>
	<bean id="Stanford03" class="gda.device.currentamplifier.DummyCurrentAmplifier"/>
	<bean id="Stanford04" class="gda.device.currentamplifier.DummyCurrentAmplifier"/>

	<bean id="counterTimer01" class="gda.device.detector.countertimer.TfgScalerWithLogValues">
		<property name="extraNames">
			<list>
				<value>I0</value>
				<value>It</value>
				<value>Iref</value>
				<value>lnI0It</value>
				<value>lnItIref</value>
			</list>
		</property>
		<property name="scaler" ref="CalMemory" />
		<property name="timer" ref="tfg" />
		<property name="timeChannelRequired" value="false" />
		<property name="outputLogValues" value="true" />
		<property name="TFGv2" value="true" />
		<property name="numChannelsToRead" value="4" />
		<property name="darkCurrentRequired" value="false" />
		<property name="outputFormat">
			<list>
				<value>%6.4g</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%9d</value>
				<value>%.4g</value>
				<value>%.4g</value>
			</list>
		</property>
	</bean>

	<!-- merges data from xspress and ion chambers -->
	<bean id="FFI0" class="gda.device.detector.TfgFFoverI0">
		<property name="xspress" ref="xspress1system" />
		<property name="counterTimer" ref="counterTimer01" />
	</bean>

