<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd
           http://www.diamond.ac.uk/schema/gda/corba
           http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean id="serialDeviceProxy" class="gda.device.TangoDeviceProxy">
		<constructor-arg value="tango://dubble27:20000/d26s/serial/mclennan" />
	</bean>

	<bean id="mcLennanController" class="gda.device.motor.TangoMcLennanController">
		<property name="tangoDeviceProxy" ref="serialDeviceProxy"/>
	</bean>

	<bean id="bragg_motor" class="gda.device.motor.McLennan600Motor">  
		<property name="fastSpeed" value="15000" />
		<property name="mediumSpeed" value="10000" />
		<property name="slowSpeed" value="5000" />
		<property name="limitsSettable" value="false" />
		<property name="mcLennanController" ref="mcLennanController" />
		<property name="axis" value="3" />
		<property name="backOffSteps" value="0" />
		<property name="local" value="true"/>
	</bean>

	<bean id="bragg" class="gda.device.scannable.ScannableMotor">
		<property name="protectionLevel" value="3" />
		<property name="initialUserUnits" value="eV" />
		<property name="motor" ref="bragg_motor" />
		<property name="hardwareUnitString" value="eV" />
	</bean>

<!--for testing only -->
	<bean id="testscannable" class="gda.device.scannable.ScannableMotor">
		<property name="motor" ref="DummyMotor"/>
		<property name="protectionLevel" value="3" />
		<property name="initialUserUnits" value="mm" />
		<property name="hardwareUnitString" value="mm" />
	</bean>
	<bean id="DummyMotor" class="gda.device.motor.DummyMotor">
		<property name="local" value="true"/>
	</bean>
</beans>