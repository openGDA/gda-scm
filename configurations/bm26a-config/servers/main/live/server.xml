<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gda="http://www.diamond.ac.uk/schema/gda/gda"
	xmlns:corba="http://www.diamond.ac.uk/schema/gda/corba"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.diamond.ac.uk/schema/gda/gda http://www.diamond.ac.uk/schema/gda/gda/gda-gda-1.0.xsd
	http://www.diamond.ac.uk/schema/gda/corba http://www.diamond.ac.uk/schema/gda/corba/gda-corba-1.0.xsd">

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="file:${gda.config}/properties/${gda.mode}/java.properties" />
	</bean>

	<bean class="gda.spring.FindableNameSetterPostProcessor" />
	<bean id="GDAHashtable" class="gda.util.findableHashtable.FindableHashtable" />
	
	<import resource="file:${gda.config}/xml/server/bm26-meta-data.xml"/>
	<import resource="file:${gda.config}/xml/server/bm26-detectors.xml"/>
	<import resource="file:${gda.config}/xml/server/bm26-scannables.xml"/>
	<import resource="file:${gda.config}/xml/server/bm26-samplestages.xml"/>
	
	<corba:adapterfactory namespace="${gda.factory.factoryName}" />

	<!-- The ScanDataStore is required for the communication of ScanDataPoints -->
	<bean id="ScanDataStore" class="gda.util.simpleServlet.FindableSimpleServlet" />

	<bean id="SimpleServlet" class="gda.util.simpleServlet.FindableSimpleServlet" />

	<!-- Plot Manager Section -->
	<bean id="Plot_Manager" class="gda.analysis.plotmanager.PlotManager" />

	<bean id="plot_server"
		class="uk.ac.diamond.scisoft.analysis.plotserver.PlotServerBase" />

	<bean id="DataWriterFactory" class="gda.data.scan.datawriter.DefaultDataWriterFactory">
		<property name="name" value="DataWriterFactory" />
	</bean>

	<import resource="file:${gda.config}/xml/server/bm26-command-server.xml"/>

<!--<gda:rbac />-->

</beans>