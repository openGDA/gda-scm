<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

        <bean id="hexapod_x_motor" class="gda.device.motor.DummyMotor">
        <property name="local" value="true" />
        </bean>
        <bean id="hexapod_x" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="hexapod_x_motor" />
        <property name="local" value="true" />
        </bean>

        <bean id="hexapod_y_motor" class="gda.device.motor.DummyMotor">
        <property name="local" value="true" />
        </bean>
        <bean id="hexapod_y" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="hexapod_y_motor" />
        <property name="local" value="true" />
        </bean>

        <bean id="hexapod_z_motor" class="gda.device.motor.DummyMotor">
        <property name="local" value="true" />
        </bean>
        <bean id="hexapod_z" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="hexapod_z_motor" />
        <property name="local" value="true" />
        </bean>

        <bean id="hexapod_pitch_motor" class="gda.device.motor.DummyMotor">
        <property name="local" value="true" />
        </bean>
        <bean id="hexapod_pitch" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="hexapod_pitch_motor" />
        <property name="local" value="true" />
        </bean>

        <bean id="hexapod_roll_motor" class="gda.device.motor.DummyMotor">
        <property name="local" value="true" />
        </bean>
        <bean id="hexapod_roll" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="hexapod_roll_motor" />
        <property name="local" value="true" />
        </bean>

        <bean id="hexapod_yaw_motor" class="gda.device.motor.DummyMotor">
        <property name="local" value="true" />
        </bean>
        <bean id="hexapod_yaw" class="gda.device.scannable.ScannableMotor">
                <property name="motor" ref="hexapod_yaw_motor" />
                <property name="local" value="true" />
        </bean>

        <bean id="hexapod_pos" class="gda.device.scannable.scannablegroup.ScannableGroup">
            <property name="local" value="true"/>
            <property name="groupMembers">
                <list>
                    <ref bean="hexapod_x"/>
                    <ref bean="hexapod_y"/>
                    <ref bean="hexapod_z"/>
                    <ref bean="hexapod_roll"/>
                    <ref bean="hexapod_pitch"/>
                    <ref bean="hexapod_yaw"/>
                </list>
            </property>
        </bean>

        <bean id="hexapod_defer" class="gda.device.controlpoint.DummyControlPoint">
                <property name="local" value="true" />
        </bean>

        <bean id="hexapod_rotate" class="gda.device.controlpoint.DummyControlPoint">
                <property name="local" value="true" />
        </bean>

        <bean id="hexapod_l1temp" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="deviceName" value="Leg 1 temp"/>
            <property name="unit" value="celsius"/>
        </bean>

        <bean id="hexapod_l2temp" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="celsius"/>
        </bean>

        <bean id="hexapod_l3temp" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="celsius"/>
        </bean>

        <bean id="hexapod_l4temp" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="celsius"/>
        </bean>

        <bean id="hexapod_l5temp" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="celsius"/>
        </bean>

        <bean id="hexapod_l6temp" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="celsius"/>
        </bean>

        <bean id="hexapod_temps" class="gda.device.scannable.scannablegroup.ScannableGroup">
            <property name="local" value="true" />
            <property name="groupMembers">
                    <list>
                        <ref bean="hexapod_l1temp"/>
                        <ref bean="hexapod_l2temp"/>
                        <ref bean="hexapod_l3temp"/>
                        <ref bean="hexapod_l4temp"/>
                        <ref bean="hexapod_l5temp"/>
                        <ref bean="hexapod_l6temp"/>
                    </list>
            </property>
        </bean>

        <bean id="hexapod_l1raw" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="mm"/>
        </bean>

        <bean id="hexapod_l2raw" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="mm"/>
        </bean>

        <bean id="hexapod_l3raw" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="mm"/>
        </bean>

        <bean id="hexapod_l4raw" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="mm"/>
        </bean>

        <bean id="hexapod_l5raw" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="mm"/>
        </bean>

        <bean id="hexapod_l6raw" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="mm"/>
        </bean>

        <bean id="hexapod_rawpos" class="gda.device.scannable.scannablegroup.ScannableGroup">
            <property name="local" value="true" />
            <property name="groupMembers">
                <list>
                           <ref bean="hexapod_l1raw"/>
                           <ref bean="hexapod_l2raw"/>
                           <ref bean="hexapod_l3raw"/>
                           <ref bean="hexapod_l4raw"/>
                           <ref bean="hexapod_l5raw"/>
                           <ref bean="hexapod_l6raw"/>
                   </list>
               </property>
        </bean>

        <bean id="hexapod_x_p_in_m" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="mm"/>
        </bean>

        <bean id="hexapod_y_p_in_m" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="mm"/>
        </bean>

        <bean id="hexapod_z_p_in_m" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="mm"/>
        </bean>

        <bean id="hexapod_pitch_p_in_m" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="degrees"/>
        </bean>

        <bean id="hexapod_roll_p_in_m" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="degrees"/>
        </bean>

        <bean id="hexapod_yaw_p_in_m" class="gda.device.monitor.DummyEpicsMonitor">
            <property name="unit" value="degrees"/>
        </bean>

        <bean id="hexapod_p_in_m" class="gda.device.scannable.scannablegroup.ScannableGroup">
            <property name="local" value="true" />
            <property name="groupMembers">
                <list>
                    <ref bean="hexapod_x_p_in_m"/>
                    <ref bean="hexapod_y_p_in_m"/>
                    <ref bean="hexapod_z_p_in_m"/>
                    <ref bean="hexapod_pitch_p_in_m"/>
                    <ref bean="hexapod_roll_p_in_m"/>
                    <ref bean="hexapod_yaw_p_in_m"/>
                </list>
            </property>
        </bean>

        <bean id="hexapod_x_useroffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_y_useroffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_z_useroffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_pitch_useroffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_roll_useroffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_yaw_useroffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_useroffset" class="gda.device.scannable.scannablegroup.ScannableGroup">
            <property name="local" value="true" />
            <property name="groupMembers">
                <list>
                    <ref bean="hexapod_x_useroffset"/>
                    <ref bean="hexapod_y_useroffset"/>
                    <ref bean="hexapod_z_useroffset"/>
                    <ref bean="hexapod_pitch_useroffset"/>
                    <ref bean="hexapod_roll_useroffset"/>
                    <ref bean="hexapod_yaw_useroffset"/>
                </list>
            </property>
        </bean>

        <bean id="hexapod_x_objectoffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_y_objectoffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_z_objectoffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_pitch_objectoffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_roll_objectoffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_yaw_objectoffset" class="gda.device.epicsdevice.EpicsDouble">
        </bean>

        <bean id="hexapod_objectoffset" class="gda.device.scannable.scannablegroup.ScannableGroup">
            <property name="local" value="true" />
            <property name="groupMembers">
                <list>
                    <ref bean="hexapod_x_objectoffset"/>
                    <ref bean="hexapod_y_objectoffset"/>
                    <ref bean="hexapod_z_objectoffset"/>
                    <ref bean="hexapod_pitch_objectoffset"/>
                    <ref bean="hexapod_roll_objectoffset"/>
                    <ref bean="hexapod_yaw_objectoffset"/>
                </list>
            </property>
        </bean>

        <bean id="hexapod" class="gda.device.scannable.scannablegroup.DeferredScannableGroup">
            <property name="local" value="true" />
            <property name="groupMembers">
                <list>
                 <ref bean="hexapod_pos" />
                 <ref bean="hexapod_rawpos"/>
                 <ref bean="hexapod_temps"/>
                 <ref bean="hexapod_useroffset"/>
                 <ref bean="hexapod_objectoffset"/>
                 <ref bean="hexapod_p_in_m"/>
                </list>
            </property>
            <property name="deferredControlPoint" ref="hexapod_defer" />
        </bean>
</beans>
