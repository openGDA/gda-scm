<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <turboFilter class="ch.qos.logback.classic.turbo.MarkerFilter">
        <Name>Finest</Name>
        <Marker>FINEST</Marker>
        <OnMatch>DENY</OnMatch>
    </turboFilter>

    <!-- enable this if you want log message appear on local console -->
   <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d  %-5level [%logger{36}] - %m%n</pattern>
        </layout>
    </appender>
    <appender name="LogPanel" class="gda.util.LogPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%logger{36}] - %m%n</pattern>
        </layout>
    </appender>
    <appender name="DebugPanel" class="gda.util.DebugPanelAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%date %-5level [%logger] - %m%n</pattern>
        </layout>
    </appender>
    <appender name="DebugFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${gda.logs.dir}/client.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${gda.logs.dir}/client.%d{yyyy-MM-dd}.log.gz</FileNamePattern>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %-5level [%logger] %rEx - %m%n</pattern>
        </layout>
    </appender>

    <logger name="gda" level="DEBUG"/>
    <logger name="gda.device.corba.impl" level="INFO"/>
    <logger name="gda.device.temperature" level="INFO"/>
    <logger name="gda.jython.corba.impl" level="INFO"/>
    <logger name="gda.oe.corba.impl" level="INFO"/>

    <root>
        <level value="ALL"/>
        <appender-ref ref="Console"/>
        <appender-ref ref="LogPanel"/>
        <appender-ref ref="DebugPanel"/>
        <appender-ref ref="DebugFILE"/>
        <!--<appender-ref ref="HTMLFILE"/>-->
    </root>
</configuration>
